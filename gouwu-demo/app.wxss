/* 引入一个样式文件 */
@import "./iconfont.wxss";
/* 小程序中 不支持通配符 */
page {
  --themeColor: #ff2d4a;
  --color: #333;
}
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

image {
  vertical-align: middle;
}

/* 多行溢出 */
.line2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
